# test_arithmetic.btasm - Test arithmetic instructions
# Tests: ADD, SUB, NEG
# Uses LDI pseudo-instruction to load immediates first

# Load test values
LDI R1, 1          # R1 = 1
LDI R2, 1          # R2 = 1

# Test ADD with positive numbers  
ADD R3, R1, R2     # R3 = 1 + 1 = 2

# Test ADD with larger values
ADD R4, R3, R3     # R4 = 2 + 2 = 4

# Test SUB (subtraction)
SUB R5, R4, R1     # R5 = 4 - 1 = 3
SUB R6, R3, R4     # R6 = 2 - 4 = -2

# Test NEG (negation)
NEG R7, R1         # R7 = -1
NEG R8, R7         # R8 = -(-1) = 1

# Test with zero
ADD R1, R0, R0     # R1 = 0 + 0 = 0  (R0 always zero)
SUB R2, R0, R0     # R2 = 0 - 0 = 0

# Verify some results
LDI R1, 2
SUB R0, R3, R1     # Should be 0 if R3 = 2
LDI R1, 4
SUB R0, R4, R1     # Should be 0 if R4 = 4

HALT
